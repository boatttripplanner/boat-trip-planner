# Google Gemini API - Requerido para las recomendaciones de IA
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# AccuWeather API - Opcional para meteorología
VITE_ACCUWEATHER_API_KEY=your_accuweather_api_key_here

# Google Analytics - Opcional para analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager - Opcional para GTM
VITE_GTM_ID=GTM-XXXXXXX

# Configuración de la aplicación
VITE_APP_TITLE=BoatTrip Planner
VITE_APP_DESCRIPTION=Planificador de viajes en barco con IA
VITE_BASE_URL=https://boattrip-planner.com

# Configuración de desarrollo
NODE_ENV=development
VITE_DEV_MODE=true

# Configuración de producción
# NODE_ENV=production
# VITE_DEV_MODE=false 